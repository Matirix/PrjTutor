@model PrjTutor.Student

@{
    ViewData["Title"] = "Details";
}


<div>
    <h4 class="text-center">
        @Html.DisplayFor(model => model.Name)
    </h4>
    <div class="container d-flex">
        <dl class=" border shadow p-3 rounded-3 flex-column w-25">
            <dt class = "">
                Enrolled:
            </dt>
            <dd class = "">
                @Html.DisplayFor(model => model.EnrollmentDate)
            </dd>
            <dt class = "">
                Withdrawn:
            </dt>
            <dd class = "">
                @Html.DisplayFor(model => model.WithdrawalDate)
            </dd>
            <dt class = "">
                Course:
            </dt>
            <dd class = "">
                @Html.DisplayFor(model => model.CourseEnrolled)
            </dd>
        </dl>

    </div>
    @await Html.PartialAsync("_EvaluationCardPartial", Model.Evaluations)

    
    @await Html.PartialAsync("_EvaluationsForStudent", Model.Evaluations)
    <h1>Feedback</h1>
    @await Html.PartialAsync("_FeedBackPartial", Model.Feedbacks)

</div>
<div id="student-evaluations"></div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.StudentId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

    