@model PrjTutor.Feedback

@{
    ViewData["Title"] = "Create";
}

<h4>Feedback</h4>
<hr />
<div class="row">
    <div class="gap-4 container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex gap-3 ">
                <div class="form-group col-3">
                    <label asp-for="StudentId" class="control-label">Student</label>
                    <select asp-for="StudentId" class ="form-control" asp-items="ViewBag.StudentId"></select>
                </div>
                
                <div class="form-group col-3">
                    <label asp-for="WeekEnding" class="control-label">Date</label>
                    <input asp-for="WeekEnding" class="form-control" />
                    <span asp-validation-for="WeekEnding" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group my-2">
                <label asp-for="LearningObjective" class="control-label">Learning Objective</label>
                <textarea asp-for="LearningObjective" class="form-control"></textarea>
                <span asp-validation-for="LearningObjective" class="text-danger"></span>
            </div>

            <div class="form-group my-2">
                <label asp-for="Performance" class="control-label"></label>
                <textarea asp-for="Performance" class="form-control"></textarea>
                <span asp-validation-for="Performance" class="text-danger"></span>
            </div>
            <div class="d-flex gap-3 mb-2">
                <div class="col form-group">
                    <label asp-for="Strength" class="control-label"></label>
                    <textarea asp-for="Strength" class="form-control"></textarea>
                    <span asp-validation-for="Strength" class="text-danger"></span>
                </div>
                <div class="col form-group">
                    <label asp-for="Weakness" class="control-label"></label>
                    <textarea asp-for="Weakness" class="form-control" ></textarea>
                    <span asp-validation-for="Weakness" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
